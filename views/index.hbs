<div class="container">
  <div class="row justify-content-center">
    <form action="/getUrl" class="col-8 mt-3" method="POST">
      <input type="url" class="form-control" name="url" placeholder="Please input your URL!" aria-label="url"
        aria-describedby="addon-wrapping" value="{{ url }}" required>
      {{#if error}}
      <div class="alert alert-warning mt-3" role="alert">
        {{ error }}
      </div>
      {{/if}}
      <button type="submit" class="btn btn-primary mt-3">Shorten URL</button>
    </form>
  </div>
</div>